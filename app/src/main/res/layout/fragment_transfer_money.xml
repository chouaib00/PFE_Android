<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbartransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/MyToolbar"
        app:titleTextAppearance="@style/ToolbarTextAppearance.Title"
        android:visibility="gone"
        >
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollviewTransfer"
        android:layout_below="@id/toolbartransfer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transferMoney_Account_Card"
                android:background="@drawable/account_card_background">
                <ImageView
                    android:src="@drawable/account_card_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transferMoney_accountCard_Text"
                        android:text="@string/transactionAccountCard_current_account"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginStart="13dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                        android:textSize="18sp"
                        android:fontFamily="serif" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transferMoney_accountCard_NumAccount"
                        android:layout_below="@id/transferMoney_accountCard_Text"
                        android:text="1236-5984-3232-1514"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transferMoney_accountCard_Balance"
                        android:text="$64,846"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_below="@id/transferMoney_Account_Card"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/transferMoney_SendingTo"
                android:id="@+id/transferMoney_SendingTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
                <RelativeLayout
                    android:layout_below="@+id/transferMoney_SendingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:id="@+id/transferMoney_SendingCard">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/transferMoney_IBANAddress"
                        app:met_helperText="International Bank Account Number"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="34"
                        app:met_minCharacters="5"
                        app:met_iconLeft="@drawable/ic_credit_card"
                        app:met_iconPadding="0dp"
                        android:id="@+id/transferMoney_IBAN"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        app:met_errorColor="@color/material_red_800"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/transferMoney_IBAN"
                        android:hint="@string/money"
                        app:met_floatingLabel="highlight"
                        app:met_iconLeft="@drawable/ic_attach_money"
                        app:met_iconPadding="0dp"
                        android:id="@+id/transferMoney_Amount"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        app:met_errorColor="@color/material_red_800"/>
                </RelativeLayout>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/transferMoney_SendingCard"
                android:hint="PIN Code"
                app:met_floatingLabel="highlight"
                app:met_iconLeft="@drawable/ic_security"
                app:met_iconPadding="0dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/transferMoney_PIN"
                android:inputType="numberPassword"
                app:met_errorColor="@color/material_red_800"/>
            <com.dd.morphingbutton.impl.LinearProgressButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="@string/send"
                android:id="@+id/transferMoney_Send"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/transferMoney_PIN"
                android:layout_alignParentBottom="true"
                android:elevation="4dp"
                android:layout_margin="3dp"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/transferMoney_FAB"
        app:elevation="7dp"
        app:backgroundTint="@color/md_light_blue_50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
