<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.isi.pfe.bank_app.Fragments.Send_Request">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/MyToolbar"
        app:titleTextAppearance="@style/ToolbarTextAppearance.Title"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_below="@id/toolbarrequest"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="{faw-credit-card-alt}\n Debit Card"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btn_debit_card"
            android:background="@android:drawable/dialog_holo_light_frame" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="{faw-book}\n Checkbook"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_checkbook"
            android:background="@android:drawable/dialog_holo_light_frame"
            />
    </LinearLayout>


</RelativeLayout>
