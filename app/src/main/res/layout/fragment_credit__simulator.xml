<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/contact_appbar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|enterAlways|snap">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarSimulator"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                style="@style/MyToolbar"
                app:titleTextAppearance="@style/ToolbarTextAppearance.Title" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sim_request_ammount"
            android:id="@+id/sim_request"
            android:textSize="@dimen/material_typography_title"
            android:padding="20dp"
            android:background="@color/material_orange_50"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sim_request"
        android:id="@+id/sim_amount_layout"
        android:layout_marginTop="30dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_amount"
            android:text="500"
            android:inputType="number"
            app:met_maxCharacters="6"
            app:met_minCharacters="3"
            android:textSize="@dimen/material_typography_subheading" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DT"
            android:layout_toRightOf="@id/sim_amount"
            android:textSize="@dimen/material_typography_subheading"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"/>
</RelativeLayout>
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sim_amount_layout"
            android:id="@+id/sim_slider_amount"
            app:dsb_min="1"
            app:dsb_max="200"
            app:dsb_rippleColor="@color/material_orange_50"
            app:dsb_indicatorColor="@color/material_orange_500"
            app:dsb_progressColor="@color/material_orange_500"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sim_request_month"
            android:id="@+id/sim_request_month"
            android:layout_below="@id/sim_slider_amount"
            android:textSize="@dimen/material_typography_title"
            android:padding="20dp"
            android:background="@color/material_orange_50"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sim_request_month"
            android:layout_centerHorizontal="true"
            android:id="@+id/sim_month_layout"
            android:layout_marginTop="10dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_months"
            android:text="1"
            android:inputType="number"
            app:met_maxCharacters="3"
            app:met_minCharacters="1"
            android:textSize="@dimen/material_typography_subheading" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Months"
            android:layout_toRightOf="@id/sim_months"
            android:textSize="@dimen/material_typography_subheading"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"/>
        </RelativeLayout>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sim_month_layout"
            android:id="@+id/sim_slider_months"
            app:dsb_min="1"
            app:dsb_max="240"
            app:dsb_rippleColor="@color/material_orange_50"
            app:dsb_indicatorColor="@color/material_orange_500"
            app:dsb_progressColor="@color/material_orange_500"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sim_btn"
            android:layout_below="@id/sim_slider_months"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/material_orange_500"
            android:text="@string/sim_btn"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_below="@id/sim_btn"
    android:id="@+id/sim_result_layout"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:background="@color/material_orange_50"
    android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_request_text"
            android:text="@string/sim_text_request"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/material_typography_body1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_amount_text"
            android:layout_toRightOf="@id/sim_request_text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/material_green_500"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/material_typography_body1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_monthrequest_text"
            android:text="@string/sim_text_month"
            android:layout_below="@id/sim_request_text"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/material_typography_body1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_months_text"
            android:layout_toRightOf="@id/sim_monthrequest_text"
            android:layout_below="@id/sim_request_text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/material_green_500"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/material_typography_body1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_result_text"
            android:layout_below="@id/sim_monthrequest_text"
            android:text="@string/sim_result_text"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/material_typography_body1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sim_result"
            android:layout_toRightOf="@id/sim_result_text"
            android:layout_below="@id/sim_monthrequest_text"
            android:layout_marginLeft="5dp"
            android:textColor="@color/material_green_500"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/material_typography_body1"
            />
</RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>