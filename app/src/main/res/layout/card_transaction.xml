<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transaction_card">
    <!--lbllistHeader-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transactionCard_Type"
            android:text="Virement"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            android:layout_marginLeft="7dp"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transactionCard_Amount"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="$195"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="23sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transactionCard_Date"
            android:layout_below="@id/transactionCard_Type"
            android:layout_alignParentLeft="true"
            android:text="17/85/1995 12:84"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
